@model AppLojaBackofficeMvc.Models.Categoria

@{
    ViewData["Title"] = "Deletar Categoria";
}

<h1 class="text-center my-4 text-danger">Tem certeza que deseja deletar esta categoria?</h1>

@if (TempData["Erro"] != null)
{
    <div class="alert alert-danger text-center">
        @TempData["Erro"]
    </div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <table class="table tabela-detalhes">
            <tbody>
                <tr>
                    <th>Descrição</th>
                    <td>@Model.CategoriaDescricao</td>
                </tr>
            </tbody>
        </table>

        <form asp-action="Delete" class="d-flex justify-content-between mt-4">
            <input type="hidden" asp-for="CategoriaId" />

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>

            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Deletar
            </button>
        </form>
    </div>
</div>
