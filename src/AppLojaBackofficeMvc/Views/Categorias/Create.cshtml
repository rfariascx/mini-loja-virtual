@model AppLojaBackofficeMvc.Models.Categoria

@{
    ViewData["Title"] = "Cadastrar Categoria";
}

<h1 class="text-center my-4">Cadastrar Categoria</h1>

<div class="d-flex justify-content-center">
    <div style="width: 100%; max-width: 500px;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="CategoriaDescricao" class="form-label"></label>
                <input asp-for="CategoriaDescricao" class="form-control" />
                <span asp-validation-for="CategoriaDescricao" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Salvar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
