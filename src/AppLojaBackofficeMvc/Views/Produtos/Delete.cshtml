@model AppLojaBackofficeMvc.Models.Produto

@{
    ViewData["Title"] = "Deletar Produto";
}

<h1 class="text-center my-4 text-danger">Tem certeza que deseja deletar este produto?</h1>

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ProdutoImagem))
        {
            <img src="@Url.Content("~/" + Model.ProdutoImagem)"
                 alt="Imagem atual"
                 style="width: 100%; border-radius: 8px; border: 1px solid #ccc; object-fit: cover;" />
        }
        else
        {
            <div style="width: 100%; height: 300px; border: 1px dashed #aaa; display: flex; align-items: center; justify-content: center; color: #888; font-size: 16px; border-radius: 8px;">
                Sem imagem
            </div>
        }
    </div>

    <div class="col-md-8">
        <table class="table tabela-detalhes">
            <tbody>
                <tr>
                    <th>Descrição</th>
                    <td>@Model.ProdutoDescricao</td>
                </tr>
                <tr>
                    <th>Imagem (caminho)</th>
                    <td>@Model.ProdutoImagem</td>
                </tr>
                <tr>
                    <th>Preço</th>
                    <td>R$ @Model.ProdutoPreco.ToString("N2")</td>
                </tr>
                <tr>
                    <th>Estoque</th>
                    <td>@Model.ProdutoEstoque</td>
                </tr>
                <tr>
                    <th>Categoria</th>
                    <td>@Model.Categoria.CategoriaDescricao</td>
                </tr>
                <tr>
                    <th>Vendedor</th>
                    <td>@Model.VendedorId</td>
                </tr>
            </tbody>
        </table>

        <form asp-action="Delete" class="d-flex justify-content-between mt-4">
            <input type="hidden" asp-for="ProdutoId" />

            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>

            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Deletar
            </button>
        </form>
    </div>
</div>
