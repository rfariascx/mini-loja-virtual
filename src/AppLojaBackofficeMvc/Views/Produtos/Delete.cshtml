@model AppLojaBackofficeMvc.Models.Produto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Produto</h4>
    <hr />
        <label>Imagem Atual:</label><br />
                    @if (!string.IsNullOrEmpty(Model.ProdutoImagem))
                    {
                        <img src="@Url.Content("~/" + Model.ProdutoImagem)"
                            alt="Imagem atual"
                            style="width: 150px; height: 150px; object-fit: cover; border-radius: 6px; border: 1px solid #ccc;" />
                    }
                    else
                    {
                        <div style="width: 150px; height: 150px; border: 1px dashed #aaa; display: flex; align-items: center; justify-content: center; color: #888;">
                            Sem imagem
                        </div>
                    }
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoDescricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdutoDescricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoImagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdutoImagem)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoPreco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdutoPreco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoEstoque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdutoEstoque)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria.CategoriaDescricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VendedorId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VendedorId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProdutoId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
