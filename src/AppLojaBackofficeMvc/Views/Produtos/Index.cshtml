@model IEnumerable<AppLojaBackofficeMvc.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoImagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoDescricao)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.ProdutoPreco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdutoEstoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="width: 120px; text-align: center;">
            @if (!string.IsNullOrEmpty(item.ProdutoImagem))
            {
                <div style="width: 100px; height: 100px; overflow: hidden; margin: 0 auto; border-radius: 8px; border: 1px solid #ccc;">
                <img src="~/@item.ProdutoImagem" alt="@item.ProdutoDescricao"
                 style="width: 100%; height: 100%; object-fit: cover;" />
                </div>
            }
            else
            {
                <div style="width: 100px; height: 100px; line-height: 100px; border: 1px dashed #aaa; text-align: center; font-size: 12px; color: #888;">
                Sem imagem
                </div>
            }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdutoDescricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdutoPreco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdutoEstoque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.CategoriaDescricao)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProdutoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProdutoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProdutoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
