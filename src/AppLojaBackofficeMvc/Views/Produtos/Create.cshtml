@model AppLojaBackofficeMvc.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProdutoDescricao" class="control-label"></label>
                <input asp-for="ProdutoDescricao" class="form-control" />
                <span asp-validation-for="ProdutoDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagemUpload" class="control-label"></label>
                <input asp-for="ImagemUpload" type="file" class="form-control" />
                <span asp-validation-for="ImagemUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoPreco" class="control-label"></label>
                <input asp-for="ProdutoPreco" class="form-control" type="number" step="0.01"/>
                <span asp-validation-for="ProdutoPreco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoEstoque" class="control-label"></label>
                <input asp-for="ProdutoEstoque" class="form-control" />
                <span asp-validation-for="ProdutoEstoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class ="form-control" asp-items="ViewBag.CategoriaId"></select>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
     
    
}
