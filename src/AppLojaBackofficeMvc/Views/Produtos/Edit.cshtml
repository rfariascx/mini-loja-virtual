@model AppLojaBackofficeMvc.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<h1 class="text-center my-4">Editar Produto</h1>

<div class="d-flex gap-4">
    <div style="flex: 1;">
        @if (!string.IsNullOrEmpty(Model.ProdutoImagem))
        {
            <img src="@Url.Content("~/" + Model.ProdutoImagem)"
                 alt="Imagem atual"
                 style="width: 100%; max-height: 600px; object-fit: cover; border-radius: 8px; border: 1px solid #ccc;" />
        }
        else
        {
            <div style="width: 100%; height: 600px; border: 1px dashed #aaa; display: flex; align-items: center; justify-content: center; color: #888; font-size: 18px; border-radius: 8px;">
                Sem imagem
            </div>
        }
    </div>
    <div style="flex: 1.2;">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="ProdutoId" />
            <input type="hidden" asp-for="VendedorId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="ProdutoDescricao" class="form-label"></label>
                <input asp-for="ProdutoDescricao" class="form-control" />
                <span asp-validation-for="ProdutoDescricao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImagemUpload" class="form-label">Nova Imagem (opcional)</label>
                <input asp-for="ImagemUpload" type="file" class="form-control" />
                <span asp-validation-for="ImagemUpload" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProdutoPreco" class="form-label"></label>
                <input asp-for="ProdutoPreco" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="ProdutoPreco" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProdutoEstoque" class="form-label"></label>
                <input asp-for="ProdutoEstoque" class="form-control" />
                <span asp-validation-for="ProdutoEstoque" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoriaId" class="form-label"></label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Salvar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
