@model AppLojaBackofficeMvc.Models.Produto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdutoId" />
            <div class="mb-2">
                <label>Imagem Atual:</label><br />
                @if (!string.IsNullOrEmpty(Model.ProdutoImagem))
                {
                    <img src="@Url.Content("~/" + Model.ProdutoImagem)"
                        alt="Imagem atual"
                        style="width: 150px; height: 150px; object-fit: cover; border-radius: 6px; border: 1px solid #ccc;" />
                }
                else
                {
                    <div style="width: 150px; height: 150px; border: 1px dashed #aaa; display: flex; align-items: center; justify-content: center; color: #888;">
                        Sem imagem
                    </div>
                }
            </div>
            <div class="form-group">
                <label asp-for="ProdutoDescricao" class="control-label"></label>
                <input asp-for="ProdutoDescricao" class="form-control" />
                <span asp-validation-for="ProdutoDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagemUpload" class="control-label">Nova Imagem (opcional)</label>
                <input asp-for="ImagemUpload" type="file" class="form-control" />
                <span asp-validation-for="ImagemUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoPreco" class="control-label"></label>
                <input asp-for="ProdutoPreco" class="form-control" type="number" step="0.01"/>
                <span asp-validation-for="ProdutoPreco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoEstoque" class="control-label"></label>
                <input asp-for="ProdutoEstoque" class="form-control" />
                <span asp-validation-for="ProdutoEstoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
                <input type="hidden" asp-for="VendedorId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
